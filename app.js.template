'use strict';

define(['angular', 'toolbar', 'ol', 'core', 'layermanager', 'map', 'ows', 'query', 'search', 'print', 'permalink', 'measure', 'legend'],

    function(angular, toolbar, oj, layermanager) {
        var module = angular.module('hs', [ 
            'hs.toolbar',
            'hs.core',
            'hs.layermanager',
            'hs.map',
            'hs.ows',
            'hs.query',
            'hs.search',
            'hs.print',
            'hs.permalink',
            'hs.measure',
            'hs.legend'
        ]);

        module.directive('hs', ['OlMap', function(OlMap) {
            return {
                templateUrl: hsl_path + 'hslayers.html',
                link: function(scope, element) {
                    $(window).resize(function() {
                        element[0].style.height = window.innerHeight + "px";
                        element[0].style.width = window.innerWidth + "px";
                        $("#map").height(window.innerHeight);
                        $("#map").width(window.innerWidth);
                        OlMap.map.updateSize()
                    });
                    $(window).resize();
                }
            };
        }]);
        
        module.value('box_layers', [
                new ol.layer.Group({
                    'img': 'osm.png',
                    title: 'Base layer',
                    layers: [
                        new ol.layer.Tile({
                            source: new ol.source.OSM(),
                            title: "OpenStreetMap",
                            base: true,
                            visible: true
                        }),
                        new ol.layer.Tile({
                            title: "OpenCycleMap",
                            visible: false,
                            base: true,
                            source: new ol.source.OSM({
                                url: 'http://{a-c}.tile.opencyclemap.org/cycle/{z}/{x}/{y}.png'
                            })
                        })
                    ],
                }), new ol.layer.Group({
                    'img': 'armenia.png',
                    title: 'WMS layers',
                    layers: [
                        new ol.layer.Tile({
                            title: "Swiss",
                            source: new ol.source.TileWMS({
                                url: 'http://wms.geo.admin.ch/',
                                params: {
                                    LAYERS: 'ch.swisstopo.pixelkarte-farbe-pk1000.noscale',
                                    INFO_FORMAT: undefined,
                                    FORMAT: "image/png; mode=8bit"
                                },
                                crossOrigin: null
                            }),
                        })
                    ]
                })]);

        module.value('default_layers', []);

        module.value('default_view', new ol.View({
            center: ol.proj.transform([17.474129, 52.574000], 'EPSG:4326', 'EPSG:3857'), //Latitude longitude    to Spherical Mercator
            zoom: 4
        }));

        module.controller('Main', ['$scope', 'Core', 'hs.ows.wms.service_layer_producer',
            function($scope, Core, srv_producer) {
                if (console) console.log("Main called");
                $scope.hsl_path = hsl_path; //Get this from hslayers.js file
                $scope.Core = Core;
                srv_producer.addService('http://erra.ccss.cz/geoserver/ows', 'armenia');
            }
        ]);

        return module;
    });
